<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SIBSUTIS_PU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>sibsutisdatabase</jta-data-source>
    <class>org.sibsutis.is.database.model.entity.Student</class>
    <class>org.sibsutis.is.database.model.entity.Professor</class>
    <class>org.sibsutis.is.database.model.entity.Employee</class>
    <class>org.sibsutis.is.database.model.entity.StudentGroup</class>
    <class>org.sibsutis.is.database.model.entity.Department</class>
    <class>org.sibsutis.is.database.model.entity.Division</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="DEFAULT_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.sibsutis.is.database.model.entity.Passport</class>
    <class>org.sibsutis.is.database.model.entity.SNILS</class>
    <class>org.sibsutis.is.database.model.entity.INN</class>
    <class>org.sibsutis.is.database.model.entity.MilitaryID</class>
    <class>org.sibsutis.is.database.model.entity.Policy</class>
    <class>org.sibsutis.is.database.model.entity.Education</class>
    <class>org.sibsutis.is.database.model.entity.Disciplines</class>
    <class>org.sibsutis.is.database.model.entity.UnifiedStateExam</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/sample"/>
      <property name="javax.persistence.jdbc.password" value="app"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="app"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
